<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cafe5.cafe5droid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.cafe5.cafe5droid.Activities.AHall"></activity>
        <activity android:name="com.cafe5.cafe5droid.Activities.ASettings" />
        <activity android:name="com.cafe5.cafe5droid.Activities.AOrder" />
        <activity android:name="com.cafe5.cafe5droid.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".Broadcast.Screen" >
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <service android:name=".Services.BgService" android:enabled="true"/>
    </application>

</manifest>